<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :category %><br/>
    <%= f.text_field :category, size: 5 %>
  </p>
  <p>
    <%= f.label :published %><br/>
    <%= f.date_select :published %>
  </p>
  <p>
    <%= f.label :read_length %><br/>
    <%= f.number_field :read_length %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", posts_path %>
  </p>
<% end %>