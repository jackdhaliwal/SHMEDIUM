<div="well">

<%= form_for(@post) do |f| %>
  <fieldset>
    <ol>
      <li>
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true %>
      </li>
      <li>
        <%= f.label :description %>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </li>
      <li>
        <%= f.label :read_length %>
        <%= f.number_field :read_length %>
      </li>
      <li>
        <%= f.label :published %>
        <%= f.date_select :published %>
      </li>
      <li>
        <%= f.label :image_file_name %>
        <%= f.text_field :image_file_name, size: 10 %>
      </li>

    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", posts_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>