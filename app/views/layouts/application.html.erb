<!DOCTYPE html>
<html>
  <head>
    <title>SHMEDIUM</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    
    <%= render 'shared/navbar' %>
    <% unless notice.blank? %>
      <div class="alert alert-info alert-dismissable alert-fixed">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
    <% end %>
    <% unless alert.blank? %>
      <div class="alert alert-danger alert-dismissable alert-fixed">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
    <% end %>
    <div class="container">
<% if current_or_guest_user %>
      Signed in as <strong>current_user.name</strong>
      <%= link_to "Sign out", destroy_user_session_path, id: "sign_out", :method => :delete %>
    
    <% else %>

  <% end %>
      
      <%= yield %>
      
    </div>
  
  </body>
  <%= render 'shared/footer' %>
</html>
